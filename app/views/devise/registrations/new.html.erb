<main class="bg-[#a5f3fc] h-screen flex flex-col justify-center gap-10 ">
  <section class="flex flex-col items-center gap-1">
    <%= image_tag("01.png", width: 100) %>
    <h1 class="font-bold text-4xl text-black my-4">VIOLETH CHAT</h1>
    <p class="text-center font-semibold text-black">CHAT LIVE</p>
  </section>

  <section class="flex flex-col items-center animate-gradient">
    <h2 class="text-black font text-2xl mb-5">SING UP</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: "text-black font-semibold text-sm w-24" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-sm font-medium rounded w-full" %> 
      </div>
      
      <div class="flex flex-col my-5 justify-center">
        <div class="flex gap-1 items-center w-96">
          <%= f.label :password, class: "text-black font-semibold text-sm w-24" %>
          <%= f.password_field :password, autocomplete: "new-password",  class: "text-sm font-medium rounded w-full" %>
        </div> 
        <div class="flex w-full items-center justify-end">
          <% if @minimum_password_length %>
            <em class="text-black font-semibold text-sm">(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
          <% end %>
        </div>
      </div>
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password_confirmation, class: 'text-black font-semibold text-sm w-24' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "text-sm font-medium rounded w-full" %>
      </div>
      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Sing Up", data: {turbo: false},  class: 'bg-gradient-to-r from-green-400 to-blue-500 rounded p-3 text-black font-semibold animate-pulse' %> 
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </section>
</main>